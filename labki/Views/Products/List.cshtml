@model IEnumerable<labki.Entities.ProductEntity>

<h2>Lista urządzeń</h2>

<form method="GET" class="form-inline mb-2">
    <input type="text" name="name" placeholder="Wyszukaj po nazwie" class="form-control" />
    <button type="submit" class="btn btn-primary ml-2">Szukaj</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Nazwa urządzenia</th>
            <th>Opis usterek</th>
            <th>Stan techninczy urządzenia</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@(item.IsVisible ? "Dobry" : "Zły")</td>
            </tr>
        }
    </tbody>
</table>
